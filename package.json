{
  "name": "megadraft",
  "version": "0.0.6",
  "description": "Rich Text editor built on top of draft.js",
  "main": "lib/Megadraft.js",
  "dependencies": {
    "draft-js": "^0.2.2",
    "react-portal": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.6.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "html-loader": "^0.4.3",
    "jsdom": "^8.1.0",
    "markdown-loader": "^0.1.7",
    "material-ui": "^0.15.0-alpha.2",
    "mocha": "^2.4.5",
    "react": "^0.14.0",
    "react-addons-test-utils": "^0.14.7",
    "react-dom": "^0.14.0",
    "react-router": "^2.0.1",
    "react-tap-event-plugin": "^0.2.2",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "peerDependencies": {
    "react": "^0.14.0",
    "react-dom": "^0.14.0"
  },
  "scripts": {
    "start": "webpack-dev-server",
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register --recursive --require ./tests/setup.js $(find tests -name '*_test.js')",
    "build:lib": "rimraf lib && babel -d lib/ src/",
    "build:dist": "rimraf dist && webpack --config webpack.config.dist.js --optimize-minimize",
    "build": "npm run build:lib && npm run build:dist",
    "site": "webpack --config webpack.config.site.js --optimize-minimize",
    "watch": "babel -d lib/ src/ --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/globocom/megadraft.git"
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "draftjs",
    "editor",
    "richtext",
    "react"
  ],
  "author": "globo.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/globocom/megadraft/issues"
  },
  "homepage": "https://github.com/globocom/megadraft#readme"
}
